<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".create.CreateActionsMainActivity">

    <TextView
        android:id="@+id/image_available"
        android:layout_width="635dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="345dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top"
        android:text="@string/image_available_on_screen"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/simple_cms" />

    <TextView
        android:id="@+id/connection_status"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="919dp"
        android:layout_marginTop="77dp"
        android:background="@drawable/ic_status_connection_red"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="237dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="625dp"
        android:layout_marginTop="607dp"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_description"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size" />

    <Button
        android:id="@+id/add"
        android:layout_width="237dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="941dp"
        android:layout_marginTop="606dp"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_description"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size" />

</RelativeLayout>